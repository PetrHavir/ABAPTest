{
  "global": {
    "files": "/src/**/*.*",
    "skipGeneratedGatewayClasses": true,
    "skipGeneratedPersistentClasses": true,
    "skipGeneratedFunctionGroups": true
  },
  "syntax": {
    "version": "v702",
    "errorNamespace": "^(Z|Y)"
  },
  "rules": {
    "keyword_case": {
      "style": "upper",
      "ignoreExceptions": true,
      "ignoreLowerClassImplmentationStatement": true,
      "ignoreGlobalClassDefinition": false,
      "ignoreGlobalInterface": false,
      "ignoreFunctionModuleName": false
    },
    "line_length": {
      "length": 80
    },
    "indentation": {
      "ignoreExceptions": true,
      "alignTryCatch": false,
      "globalClassSkipFirst": false,
      "ignoreGlobalClassDefinition": false,
      "ignoreGlobalInterface": false
    },
    "obsolete_statement": {
      "compute": true,
      "subtract": true,
      "add": true
    },
    "local_class_naming": {
      "exception": "^LCL_.*$",
      "local": "^LCL_.*$",
      "test": "^LTCL_.*$"
    },
    "method_parameter_names": {
      "ignoreExceptions": true,
      "importing": "^I._.*$",
      "returning": "^R._.*$",
      "changing": "^C._.*$",
      "exporting": "^E._.*$"
    },
    "preferred_compare_operator": {
      "exclude": [],
      "severity": "Error",
      "badOperators": [
        "EQ",
        "><",
        "NE",
        "GE",
        "GT",
        "LT",
        "LE"
      ]
    },
    "object_naming": {
      "exclude": [],
      "severity": "Error",
      "patternKind": "required",
      "ignoreNames": [],
      "ignorePatterns": [],
      "clas": "^ZC(L|X)_(MM|PS|PP|SD|FI|CO|PM|QM|IM|HCM)",
      "intf": "^ZIF_(MM|PS|PP|SD|FI|CO|PM|QM|IM|HCM)",
      "prog": "^Z(MM|PS|PP|SD|FI|CO|PM|QM|IM|HCM)",
      "fugr": "^Z",
      "tabl": "^Z",
      "ttyp": "^Z",
      "dtel": "^Z",
      "doma": "^Z",
      "msag": "^Z",
      "tran": "^Z",
      "enqu": "^EZ",
      "auth": "^Z",
      "pinf": "^Z",
      "idoc": "^Z",
      "xslt": "^Z",
      "ssfo": "^Z",
      "ssst": "^Z",
      "shlp": "^Z",
      "sxci": "^Z",
      "enhs": "^Z",
      "enho": "^Z",
      "cmod": "^Z",
      "form": "^Z",
      "sfpf": "^Z",
      "sfpi": "^Z",
      "aqqu": "^Z",
      "aqsg": "^Z",
      "aqbg": "^Z",
      "suso": "^Z",
      "sucu": "^Z",
      "wdya": "^Z",
      "wdyn": "^Z"
    },
    "function_module_recommendations": {
      "exclude": [],
      "severity": "Error",
      "recommendations": [
        {
